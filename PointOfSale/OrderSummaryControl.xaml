<UserControl x:Class="PizzaParlor.PointOfSale.OrderSummaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PizzaParlor.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="690" d:DesignWidth="360">
    <DockPanel>
        <DockPanel.Resources>
            <Style TargetType="TextBox">
                <Setter Property="DockPanel.Dock" Value="Top"></Setter>
                <Setter Property="Height" Value="40"/>
                <Setter Property="FontSize" Value="20"/>
            </Style>
        </DockPanel.Resources>
        <TextBox>Order Summary</TextBox>
        
       
        <TextBox DockPanel.Dock="Bottom">Total</TextBox>
        <TextBox DockPanel.Dock="Bottom">Tax</TextBox>
        <TextBox DockPanel.Dock="Bottom">Subtotal</TextBox>
        <ListView DockPanel.Dock="Bottom" ItemsSource="{Binding}"/>

    </DockPanel>
</UserControl>
